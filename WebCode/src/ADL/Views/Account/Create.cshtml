@model CreateModel
<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <div class="jumbotron" style="border: solid 1px; padding-bottom: 20px">
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label asp-for="Firstname">Fornavn</label>
                    <input asp-for="Firstname" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Lastname">Efternavn</label>
                    <input asp-for="Lastname" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="SchoolId">SkoleID</label>
                    <select class="form-control" asp-for="SchoolId">
                        @foreach (School school in Model.AvailableSchools)
                        {
                            <option value="@school.SchoolId">@school.SchoolName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="PersonType">Rolle</label>
                    <select class="form-control" asp-for="PersonType">
                        <option value="0">Lærer</option>
                        <option value="1">Elev</option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Username">Vælg brugernavn</label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <button type="submit" class="btn btn-success">Create</button>
                <a asp-action="Index" asp-controller="Home" class="btn btn-default">Cancel</a>
            </form>
        </div>
    </div>
</div>