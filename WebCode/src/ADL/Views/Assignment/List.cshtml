@model IEnumerable<Assignment>
@{
    ViewBag.Title = "Opgaveliste";
}
@if (Model.Count() > 0) {
    <table class="table table-bordered table-striped">
        <tr><th>Id</th><th>Titel</th><th>Spørgsmål</th><th>Handlinger</th></tr>
        @foreach (Assignment a in Model) {
            <tr>
                <td width="5%">@a.AssignmentId</td><td width="15%">@a.Headline</td><td width="64%">@a.Question</td>
                <td width="16%"> 
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="assignmentId" value="@a.AssignmentId" />
                        <a asp-action="AttachAssignmentToLocation" class="btn btn-sm btn-primary"
                            asp-route-chosenAssignmentId="@a.AssignmentId">
                            Tildel
                        </a>
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                           asp-route-assignmentId="@a.AssignmentId">
                            Rediger
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Slet
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
    <div class="text-right">
        <a asp-controller="Assignment" asp-action="Create" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Opret opgave</a>
    </div>
}
else
{
    <div class="text-center">Ingen opgaver blev fundet.<br/><br/>
        <a asp-controller="Assignment" asp-action="Create" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Opret opgave</a>
    </div>
}
