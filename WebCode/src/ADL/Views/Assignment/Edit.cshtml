@model AssignmentSetViewModel 
@{ 
    ViewBag.Title = "Opgave Sæt"; 
}

<div class="panel panel-succes">
    <div class="panel-heading text-center">
        <h4>Opret et opgavesæt</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <form class="p-a-1" asp-action="Edit" method="POST">
            <div class="panel">
                <input type="hidden" asp-for="AssignmentSetId" value="@Model.AssignmentSetId" />
                <input type="hidden" asp-for="CreatorId" value="@Model.CreatorId" />

                <input type="hidden" asp-for="DateOfCreation" value="DateTime.Now" />


                <input type="hidden" asp-for="SchoolId" value="@Model.SchoolId" />
                <input type="hidden" asp-for="DateOfCreation" value="@DateTime.Now"/>
                

                <label asp-for="Title">Titel</label>
                <input class="form-control" asp-for="Title" />
                <label asp-for="Description">Beskrivelse</label>
                <input class="form-control" asp-for="Description" />

                <label asp-for="PublicityLevel" asp.for>Dele egenskaber</label>
                <label asp-for="PublicityLevel">Dele egenskaber</label>
                <select class="form-control" asp-for="PublicityLevel">
                    <option value="0">Privat</option>
                    <option value="1">Skolen</option>
                    <option value="2">Verden</option>
                </select>

            </div>
            <div class="panel">
                <!--<input type="hidden" asp-for="Assignments[0].Type" value="2" />
                <input type="text" asp-for="Assignments[0].Title" />
                <input type="text" asp-for="Assignments[0].Text" />-->
                <h5>Indsæt ny opgave</h5>

                <button class="btn btn-md btn-primary" type="button" onclick="addAssignment('txt')">Text</button>
                <button class="btn btn-md btn-primary" type="button"onclick="addAssignment('mc')">Multiple Choice</button>
                <button class="btn btn-md btn-primary" type="button" onclick="addAssignment('ec')">Exclusive Choice</button>
                
            </div>
            <div class="panel" id="assignments-box">
            </div>

            <div class="panel pull-right">
                <button class="btn btn-md btn-success" type="submit">Opret Opgavesæt</button>
            </div>
        </form>

        
    </div>
</div>

<!--EXCLUSIVE OPGAVE-->

<div class="jumbotron" style="background: white; border: solid 1px">
    <h2 class="text-center">Nyt opgavesæt</h2>
    <div class="row">

        <div asp-validation-summary="All" class="text-danger"></div>
        <form asp-action="Edit" method="POST">
            <div class="form-group row">

                <input type="hidden" asp-for="AssignmentSet.CreatorId" value="@Model.AssignmentSet.CreatorId" />
                <input type="hidden" asp-for="AssignmentSet.AssignmentSetId" value="@Model.AssignmentSet.AssignmentSetId" />
                <input type="hidden" asp-for="AssignmentSet.CreatorId" value="@Model.AssignmentSet.CreatorId" />
                <input type="hidden" asp-for="AssignmentSet.SchoolId" value="@Model.AssignmentSet.SchoolId" />
                <input type="hidden" asp-for="AssignmentSet.LastUpdateDate" value="@DateTime.Now" />

                <label class="col-md-12" asp-for="AssignmentSet.Title">Titel:</label>
                <div class="col-md-12">
                    <input asp-for="AssignmentSet.Title" class="form-control form-control-lg" placeholder="Giv en beskrivende opgavetitel">
                </div>
                <label class="col-md-12" asp-for="AssignmentSet.Description">Beskrivelse</label>
                <div class="col-md-12">
                    <input class="form-control form-control-lg" asp-for="AssignmentSet.Description" placeholder="Opgavebeskrivelse" />
                </div>

                <label class="col-md-12" asp-for="AssignmentSet.PublicityLevel">Del med:</label>
                <div class="col-md-12">
                    <select class="form-control form-control-lg" asp-for="AssignmentSet.PublicityLevel">
                        <option value="0">Privat</option>
                        <option value="1">Skolen</option>
                        <option value="2">Verden</option>
                    </select>
                </div>

            </div>

            <div class="row">
                <div class="col-lg-12">
                    <button type="button" class="btn btn-success btn-md" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Tilføj en opgave til sættet</button>
                    <button type="submit" class="btn btn-primary btn-md">Opret opgavesæt</button>
                </div>
            </div>

            <hr />

            <div class="row" id="allAssignmentsDiv"> </div>

        </form>
    </div>



    <!--MODAL BEGYNDER HER-->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Vælg opgavetype:</h4>
                </div>
                <div class="modal-body" style="text-align: center">
                    <div>
                        <button type="button" class="btn btn-md btn-success" data-dismiss="modal" onclick="addAssignment('ec')">Exclusive choice</button>
                    </div>
                    <br/>
                    <div>
                        <button type="button" class="btn btn-md btn-warning" data-dismiss="modal" onclick="addAssignment('mc')">Multiple choice</button>
                    </div>
                    <br/>
                    <div>
                        <button type="button" class="btn btn-md btn-primary" data-dismiss="modal" onclick="addAssignment('txt')">Tekstbesvarelse</button>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
