@model Assignment

@{
    ViewBag.Title = "Opgave";
}

<div class="panel panel-succes">
    <div class="panel-heading text-center">
        <h4>Opret en opgave</h4>
    </div>
    <button onclick="addAnswerOption()">Add</button>
    <div class="panel-body">
        <form class="p-a-1" asp-action="Edit" method="POST">
            <div asp-validation-summary="All"></div>
            <input type="hidden" value="@Model.AssignmentId" asp-for="AssignmentId" />
            <div class="form-group">
                <label asp-for="Headline">Titel:</label>
                <input class="form-control" asp-for="Headline" />
            </div>
            <div class="form-group">
                <label asp-for="Question">Spørgsmål:</label>
                <input class="form-control" asp-for="Question" />
            </div>
            
            <div class="form-group" id="answer-option-group">
                @if(Model.AssignmentId == 0)
                {
                    <!--<label asp-for="AnswerOptions">Første svarmulighed:</label>
                    <input class="form-control" asp-for="AnswerOptions[0].Text" />
                    <label asp-for="AnswerOptions">Anden svarmulighed:</label>
                    <input class="form-control" asp-for="AnswerOptions[1].Text" />
                    <label asp-for="AnswerOptions">Tredje svarmulighed:</label>
                    <input class="form-control" asp-for="AnswerOptions[2].Text" />
                    <label asp-for="AnswerOptions">Fjerde svarmulighed:</label>
                    <input class="form-control" asp-for="AnswerOptions[3].Text" />-->
                }
                else
                {
                    @for(int i=1; i <= Model.AnswerOptions.Count(); i++)
                    {
                        <label asp-for="AnswerOptions">Svarmulighed nr @i:</label>                 
                        <input class="form-control" asp-for="AnswerOptions[i-1].Text" /> 
                    }
                      
                }
                
             </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer">Korrekte svar:</label>
                <select class="form-control" asp-for="CorrectAnswer">
                        <option value="0">Første svarmulighed</option>
                        <option value="1">Anden svarmulighed</option>
                        <option value="2">Tredje svarmulighed</option>
                        <option value="3">Fjerde svarmulighed</option>
                    </select>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Gem</button>
            </div>
        </form>
    </div>
</div>