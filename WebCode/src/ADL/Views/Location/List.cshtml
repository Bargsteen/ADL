@model IEnumerable<Location>

@if (Model.Count() > 0) {
    <table class="table table-bordered table-striped">
        <tr><th>Id</th><th>Titel</th><th colspan="2">Beskrivelse</th></tr>
        @foreach (Location l in Model) {
            <tr>
                <td>@l.LocationID</td><td>@l.Headline</td>
                <td>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="locationid" value="@l.LocationID" />
                        <a asp-action="Edit" class="btn btn-sm btn-warning"
                       asp-route-assignmentId="@l.LocationID">
                        Rediger
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Slet
                        </button>
                    </form>
                </td>
            </tr>
        }
        </table>
} else {
    <div class="text-center">Ingen opgaver blev fundet.</div>
}