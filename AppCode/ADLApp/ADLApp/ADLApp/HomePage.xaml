<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ADLApp"
             x:Class="ADLApp.HomePage"
             Title="Hjem"
             >
  <ScrollView>
    <StackLayout>
      <Grid ColumnSpacing="0" RowSpacing="0">
        <Grid.RowDefinitions>
          <RowDefinition Height="280"></RowDefinition>
          <RowDefinition Height="280"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="ScanButton" Grid.Row="0" Text="Scan qr kode" Clicked="OnScanButtonClicked">
        </Button>
        <Button Grid.Row="1" Text="Find qr kode"></Button>
      </Grid>
    </StackLayout>
  </ScrollView>

</ContentPage>