<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADLApp.Views.TextualResultPage">
  <StackLayout>
    <StackLayout VerticalOptions="CenterAndExpand">
      <Label
          Text="Tak for svaret. Det er nu sendt ind til din lærer"
             TextColor="Green"
             VerticalOptions="Center" 
             HorizontalOptions="Center" FontSize="25"
             />
    </StackLayout>
    <StackLayout VerticalOptions="End">
      <Button Text="Fortsæt" Clicked="OnContinueButtonClicked" BackgroundColor="#66bb6a" TextColor="White" />
    </StackLayout>
  </StackLayout>
</ContentPage>