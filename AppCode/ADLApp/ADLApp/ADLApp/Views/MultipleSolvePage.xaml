<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADLApp.Views.MultipleSolvePage"
             xmlns:controls="clr-namespace:ADLApp.Views;assembly=ADLApp"
             Title ="{Binding Headline}">
  <StackLayout Spacing="30" x:Name="SolveSL" Padding="5,10" >
    <StackLayout.BackgroundColor>
      <OnPlatform x:TypeArguments="Color"
                  Android="White"
                  WinPhone="Black"
                  iOS="White" />
    </StackLayout.BackgroundColor>
    <Label x:Name="Question" Text ="{Binding Question}" FontSize="20" HorizontalTextAlignment="Center" ></Label>
    <StackLayout VerticalOptions="CenterAndExpand">
      <ListView x:Name="answerOptionView" HasUnevenRows="True" ItemsSource="{Binding AnswerOptions}" ItemSelected="OnItemSelected" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <controls:CheckBox Text="{Binding Text}" CheckedChanged="OnChecked"></controls:CheckBox>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </StackLayout>
    <StackLayout VerticalOptions="End">
      <Button x:Name="SendAnswerButton" Text="Send svar" Clicked="OnSendAnswerButtonClicked" BackgroundColor="#66bb6a"></Button>
    </StackLayout>
  </StackLayout>
</ContentPage>