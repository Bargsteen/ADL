<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ADLApp.Views"
             x:Class="ADLApp.Views.ResultPage">
  <StackLayout Spacing="30">
    <Label x:Name="QuestionLabel"
           Text="{Binding Path=Assignment.Question}"
           VerticalTextAlignment="Start" HorizontalTextAlignment="Center"
           FontAttributes="Bold" FontSize="35"></Label>
    <StackLayout Orientation="Horizontal">
      <Label x:Name="preTextLabel" Text="Du svarede:"
             VerticalOptions="Center" HorizontalOptions="Start" FontSize="25">
      </Label>
      <Label
             x:Name="AnswerLabel"
             Text="{Binding AnswerChosen}"
             VerticalOptions="Center"
             HorizontalOptions="Center" FontSize="25" FontAttributes="Bold">
      </Label>
    </StackLayout>
    <Label
           x:Name="FeedBackLabel"
           Text="{Binding Feedback.Item1}"
           TextColor="{Binding Feedback.Item2}"
           VerticalOptions="Center" HorizontalOptions="Center" FontSize="25"/>
    <Button Text="Fortsæt" Clicked="Button_OnClicked" BackgroundColor="#66bb6a"></Button>
  </StackLayout>
</ContentPage>