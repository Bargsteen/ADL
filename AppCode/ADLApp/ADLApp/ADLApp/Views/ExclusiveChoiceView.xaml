<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ADLApp.Views.ExclusiveChoice">
  <ContentView.Content>
    <Label Text="Svarmuligheder:"></Label>
    <ListView x:Name="answerOptionView" HasUnevenRows="True" ItemsSource="{Binding AnswerOptions}" >
      <ListView.ItemTemplate >
        <DataTemplate>
          <ViewCell>
            <!--  <StackLayout> -->
            <Label FontSize="25" HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" Text= "{Binding Text}"></Label>
            <!--     </StackLayout> -->
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentView.Content>
</ContentView>
