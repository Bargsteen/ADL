<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADLApp.Views.LoginPage">
  
  <StackLayout >
    
    <StackLayout VerticalOptions="Start">
      <Label Text="Login" FontSize="50" HorizontalTextAlignment="Center" TextColor="Black" Margin="20"></Label>
    </StackLayout>
  
    <StackLayout VerticalOptions="CenterAndExpand">
      <Entry x:Name="UsernameEntry"   Placeholder="Brugernavn"></Entry>
      <Entry x:Name="PasswordEntry" Placeholder="Adgangskode" IsPassword="True"></Entry>
      <Button x:Name="LoginButton" Text="Login" Clicked="OnLoginButtonClicked" BackgroundColor="#66bb6a" TextColor="White"></Button>
    </StackLayout>

  </StackLayout>

</ContentPage>