<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ADLApp.Views.FindQrPage"
             Title="Placering af QR-koder"
             BackgroundColor="Lime">

  <StackLayout>
    
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>
      <Label Grid.Column="0" Text="Navn på QR-koden:" VerticalTextAlignment="Center"></Label>
      <Label Grid.Column="1" Text="Sted:" VerticalTextAlignment="Center"></Label>
    </Grid>

    <ListView ItemsSource="{Binding}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <ViewCell.View>
              <Grid ColumnSpacing="0">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="1*"/>
                  <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Text="{Binding Title}" VerticalTextAlignment="Center" BackgroundColor="Gray"></Label>
                <Label Grid.Column="1" Text="{Binding Description}" VerticalTextAlignment="Center" BackgroundColor="White"></Label>
              </Grid>
            </ViewCell.View>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>

  </StackLayout>

</ContentPage>