<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 x:Class="ADLApp.Views.MenuPage"
                 xmlns:local="clr-namespace:ADLApp.Views;assembly=ADLApp"
                  x:Name="MDP">

  <MasterDetailPage.Master>
    <ContentPage Title="Menu" BackgroundColor="#C3E9C6">
      <StackLayout Margin="50" Orientation="Vertical">
        <Button Text="Ret Profil" BackgroundColor="#66bb6a"></Button>
        <Button Text="Indstillinger" BackgroundColor="#66bb6a"></Button>
        <Button Text="Hjælp" BackgroundColor="#66bb6a"></Button>
        <Button Text="Log ud" BackgroundColor="#66bb6a"></Button>
      </StackLayout>
    </ContentPage>
  </MasterDetailPage.Master>
  <MasterDetailPage.Detail>
    <NavigationPage NavigationPage.HasBackButton="False" BarBackgroundColor="#66bb6a">
      <x:Arguments>
        <local:HomePage></local:HomePage>
      </x:Arguments>
    </NavigationPage>
  </MasterDetailPage.Detail>
</MasterDetailPage>